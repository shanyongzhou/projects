.picker{
  padding: 26rpx;
  background-color: #FFFFFF;
}


.order-list {
  margin-bottom: 100rpx;
  background: #f3f3f3;
  padding-top: 24rpx;
}



.orderList {
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.orderList > view {
  min-height: 52rpx;
  line-height: 52rpx;
  color: #727272;
}

.orderList > view.first-line {
  border-bottom: 1px solid #f3f3f3;
}

.text-left {
  color: #bebebe;
  display: inline-block;
  width: 200rpx;
}



.name {
  float: right;
  font-size: 30rpx;
  color: #436EEE;
  height: 40rpx;
  padding: 0 16rpx;
}

.btn-area-button {
  font-size: 32rpx;
}

