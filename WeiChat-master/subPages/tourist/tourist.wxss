.bgviewss{

    padding: 100rpx 0rpx 0rpx;
}

.touristCell
{
    border-bottom: 1rpx solid lavender;
    /*padding: 20rpx;*/
    width: 100%;
}
.touristCellNav{

    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.touristImage
{
    height: 120rpx;
    width: 120rpx;
    padding: 20rpx;
}

.address_score
{
    display: flex;
    flex-direction: column;
    padding: 20rpx 0px;
}


.oldPrice
{
    font-size: 24rpx;
    text-decoration: line-through;
    color: #A2A2A2;
}

.newPrice
{
    font-size: 32rpx;
    color: #FBCBA8;
    white-space: nowrap;
    /*padding-top: 10rpx;*/
}

.priceView
{
    display: flex;
    flex-direction: column;
    margin: auto 40rpx;
    justify-content: center;
    align-items: center
}

.text{

    font-size: 28rpx;
}

.score
{
    color: #04B4E5;
}
.address{

    font-size: 24rpx;
    line-height: 28rpx;
    color: #A2A2A2;
}

.location{

    position: fixed;
    width: 100%;
    height: 100rpx;
    background-color: #F5F5F5;
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid lightgrey;
}
.location1{
    text-align: center;
    color: #04B4E5;
    font-size: 30rpx;
    padding: 20rpx;
}
.location0{
    text-align: center;
    color: #04B4E5;
    font-size: 30rpx;
    padding: 20rpx;
}

.search{

    flex: 1;
    font-size: 30rpx;
    text-align: center;
    background-color: white;
    padding: 5rpx 0rpx;
    border-radius: 10rpx;
}

.location0::after {
  content: "";
  display: inline-block;
  height: 10rpx;
  width: 10rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #04B4E5;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -5rpx;
}